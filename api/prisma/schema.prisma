generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  birthDate DateTime @map("birth_date") @db.Date
  weigth    String
  heigth    String
  password  String

  exercise Exercise[]

  @@map("users")
}

model Exercise {
  id          Int    @id @default(autoincrement())
  userId      Int
  name        String
  weight      String
  series      Int
  repetitions Int
  user        User   @relation(fields: [userId], references: [id])

  @@map("exercises")
}
